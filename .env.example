# =============================================================================
# DATABASE
# =============================================================================
# Default: SQLite (use- sqlite:///site.db). For PostgreSQL:
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/personal_guru

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# IMPORTANT for Docker Users:
# If you are running Ollama on your host machine (outside Docker), use:
# LLM_BASE_URL=http://host.docker.internal:11434/v1
# If you are running Ollama in a separate container, use its base URL address.
# Default (Local):
LLM_BASE_URL=http://localhost:11434/v1
LLM_MODEL_NAME=qwen3:30b
LLM_MAX_OUTPUT_TOKENS=20000
LLM_API_KEY=na

# =============================================================================
# AUDIO PROVIDERS
# =============================================================================
# Options: 'externalapi' (Docker/OpenAI-Compatible) or 'native' (Local In-Process Kokoro/Whisper)
TTS_PROVIDER=externalapi
STT_PROVIDER=externalapi

# Docker/OpenAI URLs (only needed if using 'api' provider)
TTS_BASE_URL=http://localhost:8969/v1
STT_BASE_URL=http://localhost:8969/v1

# Voice settings
TTS_VOICE_DEFAULT=af_heart
TTS_VOICE_PODCAST_HOST=af_heart
TTS_VOICE_PODCAST_GUEST=am_michael

# STT Model (for Docker mode)
STT_MODEL=Systran/faster-whisper-medium.en

# =============================================================================
# COMFYUI (Book Cover Generation)
# =============================================================================
# ComfyUI server address for AI book cover generation
# If running locally: localhost:8188
# If running in Docker: host.docker.internal:8188
COMFYUI_SERVER_ADDRESS=localhost:8188
# Path to the ComfyUI workflow JSON file (defaults to scripts/example_workflow.json)
# COMFYUI_WORKFLOW_PATH=scripts/example_workflow.json

# =============================================================================
# APP SETTINGS
# =============================================================================
PORT=5011
SECRET_KEY=change-me-in-production

# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=YOUR_API_KEY
OFFLINE_MODE=True
